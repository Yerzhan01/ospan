{
    "name": "patient-assistant-system",
    "version": "1.0.0",
    "description": "Medical patient accompaniment system with AI-powered monitoring",
    "type": "module",
    "main": "dist/index.js",
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "build": "tsc -p tsconfig.build.json",
        "start": "node dist/index.js",
        "test": "vitest",
        "db:generate": "prisma generate",
        "db:push": "prisma db push",
        "db:seed": "prisma db seed",
        "db:studio": "prisma studio",
        "db:reset": "prisma db push --force-reset && prisma db seed",
        "lint": "eslint src --ext .ts",
        "format": "prettier --write \"src/**/*.ts\""
    },
    "prisma": {
        "seed": "tsx prisma/seed.ts"
    },
    "keywords": [
        "medical",
        "patient",
        "healthcare",
        "monitoring",
        "fastify"
    ],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@anthropic-ai/sdk": "^0.71.2",
        "@fastify/cookie": "^11.0.2",
        "@fastify/cors": "^11.2.0",
        "@fastify/jwt": "^10.0.0",
        "@fastify/rate-limit": "^10.3.0",
        "@google/generative-ai": "^0.24.1",
        "@prisma/adapter-pg": "^7.2.0",
        "@prisma/client": "^7.2.0",
        "axios": "^1.13.2",
        "bcrypt": "^6.0.0",
        "bullmq": "^5.66.4",
        "dayjs": "^1.11.19",
        "dotenv": "^17.2.3",
        "fastify": "^5.6.2",
        "ioredis": "^5.9.0",
        "jsonwebtoken": "^9.0.3",
        "nanoid": "^5.1.6",
        "openai": "^6.15.0",
        "pg": "^8.16.3",
        "pino": "^10.1.0",
        "pino-pretty": "^13.1.3",
        "zod": "^3.24.1"
    },
    "devDependencies": {
        "@types/bcrypt": "^6.0.0",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/node": "^25.0.3",
        "@types/pg": "^8.16.0",
        "@types/supertest": "^6.0.3",
        "@typescript-eslint/eslint-plugin": "^8.52.0",
        "@typescript-eslint/parser": "^8.52.0",
        "eslint": "^9.39.2",
        "prettier": "^3.7.4",
        "prisma": "^7.2.0",
        "supertest": "^7.2.2",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3",
        "vitest": "^4.0.16",
        "vitest-mock-extended": "^3.1.0"
    }
}
