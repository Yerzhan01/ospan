# ============================================
# Server
# ============================================
PORT=3000
NODE_ENV=development

# ============================================
# Database (PostgreSQL)
# ============================================
# Для локальной разработки (без Docker):
DATABASE_URL=postgresql://ospan:ospan_secret_password@localhost:5432/ospan_db

# Docker-specific (используется в docker-compose):
DB_USER=ospan
DB_PASSWORD=ospan_secret_password
DB_NAME=ospan_db
DB_PORT=5432

# ============================================
# Redis
# ============================================
REDIS_URL=redis://:redis_secret_password@localhost:6379
REDIS_PASSWORD=redis_secret_password
REDIS_PORT=6379

# ============================================
# Authentication
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# ============================================
# Docker Application Port
# ============================================
APP_PORT=3000

# ============================================
# WhatsApp Integration (Green API)
# ============================================
WHATSAPP_INSTANCE_ID=
WHATSAPP_API_TOKEN=

# ============================================
# AmoCRM Integration
# ============================================
AMOCRM_SUBDOMAIN=
AMOCRM_CLIENT_ID=
AMOCRM_CLIENT_SECRET=
AMOCRM_REDIRECT_URI=https://your-app.com/api/v1/webhook/amocrm/callback

# ============================================
# AI Integration
# ============================================
OPENAI_API_KEY=
GEMINI_API_KEY=

# AI Configuration
AI_PROVIDER=openai
AI_API_KEY=your_api_key_here
AI_MODEL=gpt-4o

# ============================================
# Security
# ============================================
# 32-character key for encrypting sensitive data (integration credentials)
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=your-32-character-encryption-key-here

# ============================================
# Alerts & Escalation
# ============================================
# Hours before auto-escalating unhandled MISSED_RESPONSE alerts to doctor
ESCALATION_THRESHOLD_HOURS=4

# ============================================
# Voice Transcription (Optional)
# ============================================
# Enable voice message transcription via OpenAI Whisper
TRANSCRIPTION_ENABLED=false
# OPENAI_API_KEY is also required if enabled
